<p id="notice"><%= notice %></p>

<h1>Requests</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Reaction</th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @requests.each do |request| %>
    <% if request.user == current_user || current_user.admin %>
  <tr>
    <td><%= link_to request.first_name + ' ' + request.last_name, request %></td>
    <td><%= request.email %></td>
    <td><%= request.phone %></td>
    <td><%= request.description %></td>
    <td><%= request.reaction %></td>
    <td><%= button_to 'Delete', request, method: :delete, class:"btn btn-outline-danger" %></td>
  </tr>
    <% end %>
  <% end %>
</tbody>
</table>
<br>
<% unless current_user.admin %>
<%=  link_to "New request", new_request_path, class:"btn btn-primary"  %>
<% end %>
