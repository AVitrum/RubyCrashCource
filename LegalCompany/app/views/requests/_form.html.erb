<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.admin %>
    <div class="field form-group">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control", placeholder:"The US government is pressuring me.
      I need advice on protecting the rights of Tuskars" %>
      </div>

      <div class="field form-group">
        <%= form.label :reaction, style: "display: block"%>
        <%= form.text_field :reaction, class:"form-control", placeholder: "For Admin"  %>
      </div>

      <div class="field form-group form-check">
        <%= form.check_box :checked, checked: true, class: "form-check-input form-control" %>
        <%= form.label :checked, class: "form-check-label", style: "display: inline-block" %>
      </div>
  <% else %>
    <div class="field form-group">
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name, class:"form-control-sm", placeholder:"Elon" %>
    </div>

    <div class="field form-group">
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name, class:"form-control-sm", placeholder:"Tusk"  %>
    </div>

    <div class="field form-group">
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:"form-control-sm", placeholder:"elontusk@gmail.com" %>
    </div>

    <div class="field form-group">
      <%= form.label :phone, style: "display: block" %>
      <%= form.text_field :phone, class:"form-control-sm", placeholder:"111-111-111" %>
    </div>

    <div class="field form-group">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control", placeholder:"The US government is pressuring me.
   I need advice on protecting the rights of Tuskars" %>
    </div>
    <div class="field form-group">
      <%= form.number_field :user_id, id: :request_user_id , class:"form-control-sm", type: :hidden %>
    </div>
<% end %>

  <br>
  <div class="field form-group">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
