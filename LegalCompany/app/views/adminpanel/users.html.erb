<% if current_user.admin? %>
  <p id="notice"><%= notice %></p>

  <h1>Applications</h1>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>id</th>
      <th>Email</th>
      <th>Admin</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
